                                                Value="{ThemeResource ScrollBarBg_D}" />
                                        <Setter Target="VerticalTrackRect.Fill"
                                                Value="{ThemeResource ScrollBarBg_D}" />
                                        <Setter Target="HorizontalPanningThumb.Background"
                                                Value="{ThemeResource ScrollBarPanningThumbBackgroundDisabled}" />
                                        <Setter Target="VerticalPanningThumb.Background"
                                                Value="{ThemeResource ScrollBarPanningThumbBackgroundDisabled}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
