<UserControl x:Class="ExReaderPlus.View.RichWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExReaderPlus.View"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid x:Name="Rootgrid">
        <ScrollViewer Style="{StaticResource DefaultScrollViewer}"
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="TextLayer">
                <local:RichTextBox x:Name="TextView"
                                   TextWrapping="Wrap" />
                <Canvas x:Name="RenderLayer"
                      Visibility="Collapsed" />
            </Grid>
        </ScrollViewer>
        <Button Content="&#xE948;"
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,40,40"
                Command="{Binding LoadPassage}"
                Style="{StaticResource IconButtonStyle}" />
        <Button Content="&#xA000;"
                Grid.Row="1"
                FontFamily="{StaticResource IconY}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,90,40"
                Click="Enable"
                Style="{StaticResource IconButtonStyle}" />
        <Button Content="&#xA000;"
                Grid.Row="1"
                FontFamily="{StaticResource IconY}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,140,40"
                Click="Button_Click"
                Style="{StaticResource IconButtonStyle}" />
    </Grid>
</UserControl>
