<UserControl x:Class="ExReaderPlus.View.RichWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExReaderPlus.View"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             DataContext="{StaticResource EssayPageViewModel}">
    <Grid x:Name="Rootgrid"
          AllowDrop="True"
          DragOver="ControlLayer_DragOver"
          DragLeave="Rootgrid_DragLeave"
          Margin="8,0,8,8">
        <VisualStateManager.VisualStateGroups>

        </VisualStateManager.VisualStateGroups>
        <ScrollViewer Style="{StaticResource DefaultScrollViewer}"
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="TextLayer">
                <local:RichTextBox x:Name="TextView"
                                   FontSize="{Binding RichTextBoxSize, Source={StaticResource OverallViewSettings},Mode=TwoWay}"
                                   TextWrapping="Wrap" />
                <Canvas x:Name="RenderLayer"
                        Visibility="Collapsed" />
            </Grid>
        </ScrollViewer>

        <Grid x:Name="ControlLayer"
              Background="{ThemeResource ControlBarBg_N}"
              CanDrag="True"
              DragStarting="ControlLayer_DragStarting"
              DropCompleted="ControlLayer_DropCompleted"
              VerticalAlignment="Bottom"
              Visibility="Visible"
              Height="36"
              Opacity="0.3"
              Padding="4,0,4,0"
              Margin="{Binding ReadingPageControlBar,Source={StaticResource OverallViewSettings},Mode=TwoWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Content="&#xE948;"
                    Grid.Column="0"
                    Tag="打开文章"
                    Command="{Binding LoadPassage}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xA000;"
                    Grid.Column="1"
                    Tag="阅读模式"
                    Command="{Binding ChangeMode}"
                    FontFamily="{StaticResource IconY}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xA000;"
                    Grid.Column="2"
                    FontFamily="{StaticResource IconY}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xF0D3;"
                    Tag="上一页"
                    Grid.Column="5"
                    Command="{Binding TurnPage}"
                    CommandParameter="1"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xF0D2;"
                    Tag="下一页"
                    Command="{Binding TurnPage}"
                    Grid.Column="6"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xE8E8;"
                    Tag="放大字号"
                    Command="{Binding SizeText}"
                    Grid.Column="7"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xE8E7;"
                    Tag="减小字号"
                    Command="{Binding SizeText}"
                    CommandParameter="1"
                    Grid.Column="8"
                    Style="{StaticResource IconButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>
