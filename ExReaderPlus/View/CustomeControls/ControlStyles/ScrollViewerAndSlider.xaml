                                                             To="0" />
                                            <DoubleAnimation Duration="{StaticResource ScrollBarContractDuration}"
                                                             BeginTime="{StaticResource ScrollBarContractDelay}"
                                                             Storyboard.TargetName="HorizontalLargeDecrease"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" />
                                            <DoubleAnimation Duration="{StaticResource ScrollBarContractDuration}"
                                                             BeginTime="{StaticResource ScrollBarContractDelay}"
                                                             Storyboard.TargetName="HorizontalTrackRect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" />
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Collapsed" />
                                <VisualState x:Name="Expanded">
                                    <VisualState.Setters>
                                        <Setter Target="HorizontalTrackRect.Fill"
                                                Value="{ThemeResource ScrollBarBg_P}" />
                                        <Setter Target="VerticalTrackRect.Fill"
                                                Value="{ThemeResource ScrollBarBg_P}" />
                                    </VisualState.Setters>
                                    <Storyboard>
                                        <!--<ColorAnimation Duration="{StaticResource ScrollBarAnimationDurition}"
                                                        BeginTime="{StaticResource ScrollBarAnimationBegin}"
                                                        Storyboard.TargetName="HorizontalThumb"
                                                        Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
