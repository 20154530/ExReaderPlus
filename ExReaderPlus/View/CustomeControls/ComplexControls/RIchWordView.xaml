<UserControl x:Class="ExReaderPlus.View.RichWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExReaderPlus.View"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             DataContext="{StaticResource EssayPageViewModel}">
    <Grid x:Name="Rootgrid"
          AllowDrop="True"
          DragOver="ControlLayer_DragOver"
          DragLeave="Rootgrid_DragLeave">
        <VisualStateManager.VisualStateGroups>

        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="TextScroll"
                      Margin="8,32,0,8"
                      Style="{StaticResource DefaultScrollViewer}"
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="TextLayer">
                <local:RichTextBox x:Name="TextView"
                                   FontSize="{Binding RichTextBoxSize, Source={StaticResource OverallViewSettings},Mode=TwoWay}"
                                   TextWrapping="Wrap" />
                <Canvas x:Name="RenderLayer"
                        Visibility="Collapsed" />
            </Grid>
        </ScrollViewer>

        <Grid x:Name="ControlLayer"
              Background="{ThemeResource ControlBarBg_N}"
              CanDrag="True"
              DragStarting="ControlLayer_DragStarting"
              DropCompleted="ControlLayer_DropCompleted"
              VerticalAlignment="Bottom"
              Visibility="Visible"
              Height="36"
              Opacity="0.3"
              Padding="4,0,4,0"
              Margin="{Binding ReadingPageControlBar,Source={StaticResource OverallViewSettings},Mode=TwoWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Content="&#xE948;"
                    Grid.Column="0"
                    Tag="打开文章"
                    Command="{Binding LoadPassage}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xA000;"
                    Grid.Column="1"
                    Tag="阅读模式"
                    Command="{Binding ChangeMode}"
                    FontFamily="{StaticResource IconY}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xA000;"
                    Tag="分享"
                    Grid.Column="2"
                    FontFamily="{StaticResource IconY}"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xF0D3;"
                    Tag="上一页"
                    Grid.Column="5"
                    Command="{Binding TurnPage}"
                    CommandParameter="1"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xF0D2;"
                    Tag="下一页"
                    Command="{Binding TurnPage}"
                    Grid.Column="6"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xE8E8;"
                    Tag="放大字号"
                    Command="{Binding SizeText}"
                    Grid.Column="7"
                    Style="{StaticResource IconButtonStyle}" />
            <Button Content="&#xE8E7;"
                    Tag="减小字号"
                    Command="{Binding SizeText}"
                    CommandParameter="1"
                    Grid.Column="8"
                    Style="{StaticResource IconButtonStyle}" />
        </Grid>

        <Grid x:Name="WordPanel"
              Visibility="Collapsed"
              Background="{ThemeResource WordListBg}"
              Padding="8,0,8,8"
              Width="280"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Background="Transparent" />
            <Grid x:Name="WordPanelTitle"
                  Margin="0,24,0,8"
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Title"
                           FontSize="24"
                           Margin="4,0,0,0"
                           FontWeight="Normal"
                           TextAlignment="Center"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Text="TextList" />
                <ComboBox Grid.Column="1" />
            </Grid>
            <ListView Grid.Row="2"
                      Style="{StaticResource KeyWordListView}"
                      ItemsSource="{x:Bind Keywordlist,Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
